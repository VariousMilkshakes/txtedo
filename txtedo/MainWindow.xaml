<Window x:Class="txtedo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" Height="50" Width="400" ResizeMode="NoResize" WindowStyle="None" Background="Black" Top="100" Left="100">
    <Window.Resources>
        <System:String x:Key="CurrentPrompt">Your Command</System:String>
    </Window.Resources>
    <Grid x:Name="txtedoWindow" Height="50" VerticalAlignment="Bottom">
        <TextBox x:Name="PromptLabel" Text="{DynamicResource CurrentPrompt}" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Background="#FF474747" Width="345" Foreground="Gray" FontFamily="Hack" FontSize="35"/>
        <TextBox x:Name="CommandBox" HorizontalAlignment="Left" TextWrapping="Wrap" Width="345" Background="{x:Null}" Foreground="White" BorderBrush="#FF474747" FontFamily="Hack" FontSize="35" SelectionBrush="#FF474747" Height="50" VerticalAlignment="Bottom" TextChanged="CommandBox_TextChanged"/>
        <Button Content="❯" HorizontalAlignment="Left" Margin="350,0,0,0" Width="50" Height="50" Background="#FF474747" BorderBrush="#FF474747" Foreground="White" FontSize="22" FontFamily="Hack" VerticalAlignment="Bottom" RenderTransformOrigin="0.467,-0.1" BorderThickness="1,1,1,1" ClipToBounds="False" Click="Button_Click"/>
    </Grid>
</Window>
